<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_item_list_foundation"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="@dimen/dimen10dp"
    app:cardCornerRadius="@dimen/dimen12dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_business"
            android:layout_width="@dimen/dimen100dp"
            android:layout_height="@dimen/dimen100dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/image_foundation_content_description"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:id="@+id/layout_title_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dimen8dp"
            android:layout_toEndOf="@id/image_business"
            android:layout_toStartOf="@id/image_user_state">
            <TextView
                android:id="@+id/text_title_business"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/charity_organization"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/dimen4dp"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"/>
            <TextView
                android:id="@+id/text_type_business"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/charity_organization"
                style="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/image_user_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/dimen4dp"
            android:contentDescription="@string/circular_status_content_description"
            android:background="@drawable/shape_circular_state"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>